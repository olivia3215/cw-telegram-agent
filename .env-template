# Get the absolute path of the directory containing this .env file
# This ensures paths are always absolute regardless of where the script is sourced from
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)"

# Where to store state - use absolute path based on script location
export CINDY_AGENT_STATE_DIR="$SCRIPT_DIR/state"

# Where to find the config files and agents - use absolute paths based on script location
export CINDY_AGENT_CONFIG_PATH="$SCRIPT_DIR/configdir:$YOUR_CONFIG_DIR"

# Telegram client API
export TELEGRAM_API_ID=$YOUR_TELEGRAM_API_ID
export TELEGRAM_API_HASH=$YOUR_TELEGRAM_API_HASH

# This enables you to just run "pytest" - use absolute path based on script location
export PYTHONPATH="$SCRIPT_DIR/src"

# Phone number of the Puppet Master. This enables the admin console.
# Substitute the phone number with your own.
export CINDY_PUPPET_MASTER_PHONE=12345678901

# A secret key used to generate the challenge
# Generate a secret key with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
export CINDY_ADMIN_CONSOLE_SECRET_KEY=$YOUR_SECRET_KEY

# SSL/HTTPS configuration (enabled for secure mobile access)
# Generate certificates with: openssl req -x509 -newkey rsa:4096 -nodes -out certs/cert.pem -keyout certs/key.pem -days 365 -subj "/CN=localhost"
export CINDY_ADMIN_CONSOLE_SSL_CERT="$SCRIPT_DIR/certs/cert.pem"
export CINDY_ADMIN_CONSOLE_SSL_KEY="$SCRIPT_DIR/certs/key.pem"

# Set debugging level
unset CINDY_LOG_LEVEL
# export CINDY_LOG_LEVEL=DEBUG

##########
## ChatGPT
##########

# Credentials for openai (ChatGPT)
export OPENAI_API_KEY=$YOUR_OPENAI_API_KEY
export OPENAI_DEBUG_LOGGING=true

##########
## Gemini (Google)
##########

# Credentials for Google (Gemini)
# unset GOOGLE_GEMINI_API_KEY
export GOOGLE_GEMINI_API_KEY=$YOUR_GOOGLE_GEMINI_API_KEY

# Choose which gemini model to use
export GEMINI_MODEL="gemini-3-flash-preview"

# enable debugging of LLM prompts and results
export GEMINI_DEBUG_LOGGING=true

##########
## Grok (X)
##########

# Credentials for Grok
# unset GROK_API_KEY
export GROK_API_KEY=$YOUR_GROK_API_KEY
export GROK_DEBUG_LOGGING=true
export GROK_MODEL=grok-4-fast-non-reasoning

##########
## Openrouter
##########

# Credentials for Openrouter
# unset OPENROUTER_API_KEY
export OPENROUTER_API_KEY=$YOUR_OPENROUTER_API_KEY

# Choose which openrouter model to use
export OPENROUTER_MODEL=google/gemini-3-flash-preview
export OPENROUTER_DEBUG_LOGGING=true

################
# MySQL Configuration
################

# Database settings needed to run the agent
export CINDY_AGENT_MYSQL_HOST=localhost
export CINDY_AGENT_MYSQL_PORT=3306
export CINDY_AGENT_MYSQL_DATABASE=cindy_telegram_agent
export CINDY_AGENT_MYSQL_USER=cindy_agent
export CINDY_AGENT_MYSQL_PASSWORD=$YOUR_CINDY_AGENT_MYSQL_PASSWORD
export CINDY_AGENT_MYSQL_POOL_SIZE=5
export CINDY_AGENT_MYSQL_POOL_TIMEOUT=30

# Database settings used to run the tests
export CINDY_AGENT_MYSQL_TEST_HOST=localhost
export CINDY_AGENT_MYSQL_TEST_PORT=3306
export CINDY_AGENT_MYSQL_TEST_DATABASE=test_cindy_telegram_agent
export CINDY_AGENT_MYSQL_TEST_USER=test_cindy_agent
export CINDY_AGENT_MYSQL_TEST_PASSWORD=$YOUR_CINDY_AGENT_MYSQL_TEST_PASSWORD
export CINDY_AGENT_MYSQL_TEST_POOL_SIZE=5
export CINDY_AGENT_MYSQL_TEST_POOL_TIMEOUT=30

################
## Global parameters that can be overridden in the admin console
################

# The number of characters per second
export TYPING_SPEED=4

# The number of seconds that the agent takes to type the first character
export START_TYPING_DELAY=20

# The amount of time to select a sticker
export SELECT_STICKER_DELAY=6

export DEFAULT_AGENT_LLM=gemini-3-flash-preview

# The model to use to analyze media
export MEDIA_MODEL=gemini-3-flash-preview

# The model used to translate messages to English for the admin console
export TRANSLATION_MODEL=grok-4-1-fast-non-reasoning

# The max number of media descriptions produced per tick
export MEDIA_DESC_BUDGET_PER_TICK=8

# Max video duration (seconds) for AI description; videos longer than this are marked unsupported
# Default 10 if unset. Increase (e.g. 20 or 30) to allow longer videos.
export MEDIA_VIDEO_MAX_DURATION_SECONDS=10

################
## Parameters changed in the admin console
################

# The admin console appends export lines to the .env file when the runtime configuration is changed
